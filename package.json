{
  "name": "fusion",
  "version": "1.0.0",
  "description": "Fusion",
  "private": true,
  "license": "ISC",
  "homepage": "https://github.com/equinor/fusion-api#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/equinor/fusion-api.git"
  },
  "scripts": {
    "install": "lerna bootstrap",
    "build": "lerna run build",
    "test": "lerna run test",
    "lint": "lerna run lint",
    "lint:report": "eslint --output-file eslint-report.log.json --format json packages/*/src",
    "doc": "npm run doc:web",
    "doc:web": "npx typedoc",
    "doc:markdown": "npx typedoc --options typedoc.markdown.js",
    "doc:serve": "npx http-server docs/html",
    "doc:watch": "onchange 'packages/**/*.ts' -- npm run doc:web"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@equinor/eslint-config-fusion": "0.0.3",
    "@equinor/jest-config-fusion": "^0.1.2",
    "eslint": "^7.13.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.1",
    "onchange": "^7.1.0",
    "prettier": "^2.1.2",
    "ts-jest": "^26.5.6",
    "tslib": "^2.2.0",
    "typedoc": "^0.20.36",
    "typedoc-neo-theme": "^1.0.10",
    "typedoc-plugin-lerna-packages": "^0.3.1",
    "typedoc-plugin-markdown": "^3.0.11",
    "typescript": "^4.0.5"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./packages/**/src/**/*.{js,ts,tsx}": [
      "eslint --quiet --fix"
    ]
  }
}
